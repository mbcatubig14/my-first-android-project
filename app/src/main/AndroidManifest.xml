<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.muhammad.exquizme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegisterUserActivity" />
        <activity android:name=".activities.UserProfileMenuActivity" />
        <activity android:name=".activities.PlayQuizActivity" />
        <activity android:name=".activities.StatisticsActivity" />
        <activity android:name=".activities.RequestSubjectActivity" />
        <activity android:name=".activities.RateAndFeedbackActivity" />

    </application>

</manifest>